export NODE_PATH=$(which node)
export PHANTOMJS_BIN=`which phantomjs`

# Python
export PYTHONPATH='/usr/local/Cellar/python/2.7.9'

# Ruby
export GEM_HOME=$HOME/.gem
export PATH=$GEM_HOME/bin:$PATH
